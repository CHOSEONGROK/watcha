<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:foreground="?attr/selectableItemBackground">


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="15dp" android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/search_fragment_side_margin"
            android:id="@+id/tv_search"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="지우기"
            android:layout_width="wrap_content" android:layout_height="0dp"
            android:padding="@dimen/search_fragment_side_margin"
            android:gravity="center"
            android:id="@+id/tv_delete_all"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginRight="1dp"
            android:padding="15dp"
            android:id="@+id/iv_delete_one"
            android:visibility="visible"
            android:foreground="?attr/selectableItemBackground"
            android:alpha="0.5"
            app:srcCompat="@drawable/search_item_delete_one"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"/>

</android.support.constraint.ConstraintLayout>