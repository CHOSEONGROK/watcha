<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context="com.example.csr83.watchaproject.view.exoplayer.ExoPlayerActivity">

    <!--<com.google.android.exoplayer2.ui.PlayerView-->
            <!--android:id="@+id/player_view"-->
            <!--android:layout_width="match_parent" android:layout_height="match_parent"/>-->

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent" android:layout_height="match_parent"/>

    <!-- Surface Controller -->
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="horizontal" android:background="#00000000"
            android:id="@+id/surface_controller">

        <!-- Left -->
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_weight="2"
                     android:id="@+id/controller_left">


            <com.example.csr83.watchaproject.view.exoplayer.VerticalSeekBar
                    android:layout_width="wrap_content" android:layout_height="200dp"
                    android:layout_marginLeft="80dp" android:layout_gravity="start|center_vertical"
                    android:id="@+id/seekBar_brightness"
                    android:max="100"
                    android:visibility="invisible"/>

            <ImageView android:layout_width="200dp" android:layout_height="100dp"/>

        </FrameLayout>

        <!-- Center -->
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:id="@+id/controller_center">

            <!-- Brightness View -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center" android:gravity="center"
                          android:orientation="horizontal"
                          android:visibility="gone"
                          android:id="@+id/brightness_view">

                <ImageView android:layout_width="40dp" android:layout_height="40dp"
                           android:layout_marginRight="8dp" android:layout_marginTop="2dp"
                           app:srcCompat="@drawable/brightness" android:tint="@color/white"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_brightness"
                          android:text="000"
                          android:textColor="@color/white" android:textSize="40sp"/>

            </LinearLayout>

            <!-- Sound View -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center" android:gravity="center"
                          android:orientation="horizontal"
                          android:visibility="gone"
                          android:id="@+id/sound_view">

                <ImageView android:layout_width="30dp" android:layout_height="30dp"
                           android:layout_marginRight="8dp"
                           app:srcCompat="@drawable/sound" android:tint="@color/white"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_sound"
                          android:text="000"
                          android:textColor="@color/white" android:textSize="40sp"/>

            </LinearLayout>

        </FrameLayout>

        <!-- Right -->
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_weight="2"
                     android:id="@+id/controller_right">

            <!-- Sound SeekBar -->
            <com.example.csr83.watchaproject.view.exoplayer.VerticalSeekBar
                    android:layout_width="wrap_content" android:layout_height="200dp"
                    android:layout_marginRight="80dp" android:layout_gravity="end|center_vertical"
                    android:id="@+id/seekBar_sound"
                    android:max="100"
                    android:visibility="invisible"/>

        </FrameLayout>

    </LinearLayout>


    <!-- Top Bar -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="@dimen/top_bottom_bar_height"
                 android:id="@+id/container_top_bar"
                 android:layout_gravity="top">

        <!-- Top Bar Gradation Background -->
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                     android:background="@drawable/gradation_background_exoplayer_top"/>

        <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="horizontal" android:gravity="center_vertical">

            <ImageView android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                       android:padding="12dp"
                       android:id="@+id/iv_back"
                       app:srcCompat="@drawable/arrow_back"
                       android:tint="@color/white"/>

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_marginLeft="16dp" android:layout_weight="1"
                      android:text="title"
                      android:textColor="@color/white" android:textSize="22sp" android:id="@+id/tv_movie_title"/>

            <ImageView android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                       android:padding="14dp"
                       android:id="@+id/iv_pop_screen"
                       app:srcCompat="@drawable/pop_screen"
                       android:tint="@color/white"/>

            <ImageView android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                       android:id="@+id/iv_info"
                       android:padding="14dp"
                       app:srcCompat="@drawable/info"
                       android:tint="@color/white"/>

            <ImageView android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                       android:id="@+id/iv_setting"
                       android:padding="14dp"
                       app:srcCompat="@drawable/setting"
                       android:tint="@color/white"/>

            <ImageView android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                       android:id="@+id/iv_lock"
                       android:padding="14dp"
                       app:srcCompat="@drawable/unlocked"
                       android:tint="@color/white"/>


        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Bar -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="@dimen/top_bottom_bar_height"
            android:id="@+id/container_bottom_bar"
            android:layout_gravity="bottom">

        <!-- Bottom Bar Gradation Background -->
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                     android:background="@drawable/gradation_background_exoplayer_bottom"/>

        <!-- Play & Pause Button -->
        <ImageView
                android:src="@drawable/exo_controls_play"
                android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                android:padding="4dp"
                android:id="@+id/iv_play"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:src="@drawable/exo_controls_pause"
                android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                android:padding="4dp"
                android:id="@+id/iv_pause"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Time bar -->
        <LinearLayout
                android:layout_width="0dp" android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="70dp"
                android:paddingRight="32dp">

            <TextView
                    android:text="00:00:00"
                    android:layout_width="60dp" android:layout_height="wrap_content"
                    android:id="@+id/tv_position"
                    android:textColor="@color/light_gray"
                    android:gravity="right"/>

            <SeekBar
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    android:id="@+id/seekBar"
                    android:progress="0"
                    android:max="0"
                    android:layout_weight="1"/>

            <TextView
                    android:text="00:00:00"
                    android:layout_width="60dp" android:layout_height="wrap_content"
                    android:id="@+id/tv_duration"
                    android:textColor="@color/light_gray"
                    android:gravity="right"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <!-- Screen Lock -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/screen_lock"
                 android:visibility="gone">

        <ImageView android:layout_width="@dimen/top_bottom_bar_height" android:layout_height="@dimen/top_bottom_bar_height"
                   android:layout_gravity="top|right"
                   android:id="@+id/iv_unlock"
                   android:padding="10dp"
                   app:srcCompat="@drawable/locked"/>

    </FrameLayout>

</FrameLayout>
